{% extends "base.html.twig" %}
{% block body %}
    <div class="container body">
        <div class="container">
            <h1>{{title}}</h1>
            {% for message in messages %}
                <div class="container">
                    <p>{{message.date|date('d-m-Y')}}</p>
                    <p>{{message.message}}</p>
                    <p>{{message.author.username}}</p>
                </div>
            {% endfor %}
            <h4>Poster un message :</h4>
            {{ form_start(form)}}
            {{ form_end(form)}}
        </div>
    </div>
{% endblock body %}